<body>
  <img src="https://www.freepngimg.com/thumb/usa/3-2-america-flag-png-picture-thumb.png">
  <p id="pancake2"></p>
  <input id = "pancake">
  <input type="submit" onclick = "submit()">
  <script>
  joke = document.getElementById("pancake2")
  
  prompts = { 
    choice:"you are now in the haunted house do you want to keep walking or go back home",
    fate:"its now to late to turn back",
    loser:" your a punk, are sure you want to leave",
  }
  
  jump = document.getElementById("pancake")
  
 function submit()  {
   if (jump.value == "go back home") {
		//alert("   nhgjg        ")
		joke.innerHTML=prompts.loser
		jump.value = ""
   }
   if (jump.value == "keep walking") {
		//alert("   nhgjg        ")
		joke.innerHTML=prompts.fate
		jump.value = ""
   }
   
    if (jump.value == "keep walking") {
		//alert("   nhgjg        ")
		joke.innerHTML=prompts.fate
		jump.value = ""
   }
}

  
  
joke.innerHTML = prompts.choice
  
  
  </script>
</body>.
